            </a>
            <a href="/account">
                <div id="account">
                    <h1>Gerez mon compte</h1>
                </div>
            </a>
            <a href="/friend">
                <div id="friends">
                    <h1>Voir mes amis</h1>
                </div>
            </a>

        </div>
    </div>
{% endblock %}
